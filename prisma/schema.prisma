generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(uuid())
  name          String
  email         String
  password_hash String
  Diet          Diet[]
}

model Diet {
  id          String   @id @default(uuid())
  name        String
  description String
  date        DateTime
  isDiet      Boolean  @default(false)

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
